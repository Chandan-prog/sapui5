<mvc:View controllerName="ep.ecommercemodule.controller.login"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Page id="page" title="{i18n>appTitle}">
        <content>
            <HBox id="login" class="login-form" width="100%" justifyContent="Center">
                <VBox id="_IDGenVBox1Login">
                    <FlexBox id="_IDGenFlexBox1Login" alignItems="Center" justifyContent="Center">
                        <Title id="_IDGenTitle1Login" text="{i18n>Login}" class="form-header" level="H2" />
                    </FlexBox>
                    <HBox id="_IDGenHBox2Login" width="100%" justifyContent="SpaceBetween">
                        <VBox id="_IDGenVBox2Login" width="100%">
                            <Label id="_IDGenLabel4Login" text="{i18n>email Address}" class="material-label" />
                            <Input id="emailAddressLogin" class="material-input"/>
                            
                            <Label id="_IDGenLabel5Login" text="{i18n>Password}" class="material-label" />
                            <Input id="passwordLogin" class="material-input" type="Password"/>

                            <FlexBox id="_IDGenFlexBoxLogin" alignItems="Center" justifyContent="Center" class="submit-button">
                                <Button id="loginButton" text="{i18n> Login}" press="login" class="material-button" />
                            </FlexBox>

                            <FlexBox id="_IDGenFlexBox2Login" alignItems="Center" justifyContent="Center" class="submit-button">
                                <Button id="registerButton" text="{i18n> Register}" press="onRegister" class="material-button" />
                            </FlexBox>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>